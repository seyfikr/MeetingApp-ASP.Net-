@model UserInfo
@{
ViewBag.Title="Bşvuru detayı";
}

<main class="text-center">
    <h1 class="h4">Başvuru Detay</h1>
    <p>
        <span class="badge text-bg-@(Model?.WillAttend ?? false ? "primary" : "danger")">
    @if (Model?.WillAttend == true)
    {
        <text>Katılıyor</text>
    }
    else if (Model?.WillAttend == false)
    {
        <text>Katılmıyor</text>
    }
</span>
    </p>
    <p>İsim: @Model?.Name</p>
    <p>Email: @Model?.Email</p>
    <p>Telefon: @Model?.Phone</p>
    <a asp-controller="Meeting" asp-action="List" class="btn btn-outline">Katılımcı Listesi</a>
</main>