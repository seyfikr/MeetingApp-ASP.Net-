@model List<UserInfo>
    @{
    ViewBag.Title="Katılım Listesi" ;
    };
    <main>
        <h1 class="h4">Toplantı Katılım Listesi</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>Ad</td>
                    <td>Email</td>
                    <td>Katılım Durumu</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @{int katilimciSayisi=0;}
                @foreach(var user in Model)
                {
                var durum=user.WillAttend==true ?"Evet":"Hayır";
                var className=user.WillAttend==true?"table-succes":"table-danger";
                if(user.WillAttend==true)
                {
                katilimciSayisi++;
                }
                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a>
                    </td>
                </tr>
                }


            </tbody>
        </table>
        <div class="card">
            <div class="card-body">
                <span>katılımcı sayısı: @katilimciSayisi</span>
            </div>
        </div>
    </main>